@model UserViewModel

@{
	ViewData["Title"] = $"User {Model.User.Id}";
}

<h3>@Model.User.Name</h3>
<div class="row">
	<div class="col-md-2">
		<strong>Username</strong>
	</div>
	<div class="col-md-10">@Model.User.Username</div>
</div>
<div class="row">
	<div class="col-md-2">
		<strong>Email</strong>
	</div>
	<div class="col-md-10">@Model.User.Email</div>
</div>
<div class="row">
	<div class="col-md-2">
		<strong>Phone</strong>
	</div>
	<div class="col-md-10">@Model.User.Phone</div>
</div>
<div class="row">
	<div class="col-md-2">
		<strong>Address</strong>
	</div>
	<div class="col-md-10">@Model.User.Address</div>
</div>
<div class="row">
	<div class="col-md-2">
		<strong>Company</strong>
	</div>
	<div class="col-md-10">@Model.User.Company</div>
</div>
<div class="row">
	<div class="col-md-2">
		<strong>Website</strong>
	</div>
	<div class="col-md-10">@Model.User.Website</div>
</div>
<h4>Albums</h4>
<ul class="list-unstyled">
	@foreach (var album in Model.Albums)
	{
		<li>@album.Title</li>
	}
</ul>
<form asp-action="Album">
	<input name="Title" type="text">
	<button>Add</button>
</form>